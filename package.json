{
	"name": "vscode-markdown-notebook",
	"displayName": "Markdown Notebook",
	"version": "0.0.1",
	"private": false,
	"description": "An extension for editing markdown files in VS Code notebooks",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension.js",
	"browser": "./out/extension-bundle.js",
	"scripts": {
		"bundle": "npx esbuild src/extension.ts --bundle --outfile=out/extension-bundle.js --platform=node --external:vscode",
		"compile": "tsc -p ./",
		"deploy": "npx vsce publish --noVerify",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "yarn run compile && yarn run bundle",
		"watch": "tsc -watch -p ./"
	},
	"contributes": {
		"notebooks": [
			{
				"displayName": "Markdown Notebook",
				"priority": "option",
				"selector": [
					{
						"filenamePattern": "*.{md,markdown}"
					}
				],
				"type": "markdown-notebook"
			}
		]
	},
	"activationEvents": [
		"onNotebook:markdown-notebook"
	],
	"devDependencies": {
		"@types/glob": "8.1.0",
		"@types/mocha": "10.0.6",
		"@types/node": "20.11.30",
		"@types/vscode": "1.87",
		"esbuild": "0.20.2",
		"glob": "10.3.10",
		"mocha": "10.3.0",
		"typescript": "5.4.2",
		"typescript-esbuild": "latest",
		"vscode-test": "1.3.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"preview": true,
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		},
		"virtualWorkspaces": true
	}
}
